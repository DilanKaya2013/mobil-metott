<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView_takim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/besiktas_logo"
        tools:srcCompat="@tools:sample/avatars" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_takim">

        <RadioButton
            android:id="@+id/radioButton_besiktas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beşiktaş" />

        <RadioButton
            android:id="@+id/radioButton_samsunspor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SamsunSpor" />

        <RadioButton
            android:id="@+id/radioButton_juventus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juventus" />

        <RadioButton
            android:id="@+id/radioButton_chelsea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chelsea" />

    </RadioGroup>

    <Button
        android:id="@+id/button_sec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Seç"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>